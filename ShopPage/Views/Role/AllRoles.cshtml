@model IEnumerable<ShopPage.RoleModelView>

@{
    ViewBag.Title = "AllRoles";
}

    <div class="container-fluid justify-content-center">
        <h2>AllRoles</h2>

        <p>
            @Html.ActionLink("Create New", "AddRole", "Role", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>
                @*<th>
                    @Html.DisplayNameFor(model => model.RoleId)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.RoleId)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateRole", "Role", new { id = item.RoleId }, new { @class = "btn btn-primary" }) |
                        @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                        @Html.ActionLink("Delete", "DeleteRole", "Role", new { id = item.RoleId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>